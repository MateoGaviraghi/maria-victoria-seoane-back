# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/cursos_ventas?schema=public"

# ===========================================
# JWT - AUTENTICACIÓN
# ===========================================
JWT_SECRET=cambiar_por_secret_seguro_en_produccion
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=cambiar_por_refresh_secret_seguro_en_produccion
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# GOOGLE OAUTH
# ===========================================
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ===========================================
# MERCADOPAGO
# ===========================================
MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=tu_mercadopago_public_key
MERCADOPAGO_WEBHOOK_SECRET=tu_webhook_secret

# ===========================================
# EMAIL (SMTP)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password
MAIL_FROM=noreply@tudominio.com

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
